pipeline {
    agent any

    tools {
        maven 'Maven_3.8.5'    // Make sure Jenkins has this tool configured
        jdk 'JDK11'            // Make sure JDK11 is configured in Jenkins Global Tools
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/amsavalli1429/RestAssueredBookApi.git', branch: 'main'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                    archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
                }
            }
        }
    }

    post {
        success {
            echo ' Build and tests passed successfully.'
        }
        failure {
            echo ' Build or tests failed!'
        }
    }
}
